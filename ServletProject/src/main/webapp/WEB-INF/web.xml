<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	id="WebApp_ID" version="6.0">
	<display-name>ServletProject</display-name>
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>

	<!-- 글로벌 파라미터 설정 -->
	<context-param>
		<param-name>appName</param-name>
		<param-value>MyBoardWeb</param-value>
	</context-param>

	<!-- Servlet 클래스를 등록한다. -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.multicampus.web.user.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>getBoardList</servlet-name>
		<servlet-class>com.multicampus.web.board.GetBoardListServlet</servlet-class>
		<!-- 로컬 파라미터 설정 -->
		<init-param>
			<param-name>author</param-name>
			<param-value>채규태</param-value>
		</init-param>
		<init-param>
			<param-name>createDate</param-name>
			<param-value>2025-09-02</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>getBoardList</servlet-name>
		<url-pattern>/getBoardList.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>insertBoard</servlet-name>
		<servlet-class>com.multicampus.web.board.InsertBoardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>insertBoard</servlet-name>
		<url-pattern>/insertBoard.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>getBoard</servlet-name>
		<servlet-class>com.multicampus.web.board.GetBoardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getBoard</servlet-name>
		<url-pattern>/getBoard.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updateBoard</servlet-name>
		<servlet-class>com.multicampus.web.board.UpdateBoardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateBoard</servlet-name>
		<url-pattern>/updateBoard.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>deleteBoard</servlet-name>
		<servlet-class>com.multicampus.web.board.DeleteBoardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteBoard</servlet-name>
		<url-pattern>/deleteBoard.do</url-pattern>
	</servlet-mapping>

</web-app>
